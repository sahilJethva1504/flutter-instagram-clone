# Set the default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files you want to always be normalized and converted
*.c text
*.h text
*.cpp text
*.hpp text
*.java text
*.cs text
*.js text
*.jsx text
*.ts text
*.tsx text
*.html text
*.css text
*.json text
*.xml text
*.yaml text
*.yml text
*.dart text

# Declare files that will always have CRLF line endings on checkout
*.bat text eol=crlf
*.cmd text eol=crlf

# Declare files that will always have LF line endings on checkout
*.sh text eol=lf
*.bash text eol=lf

# Binary files should be treated as binary and not modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.xz binary
*.exe binary
*.dll binary
